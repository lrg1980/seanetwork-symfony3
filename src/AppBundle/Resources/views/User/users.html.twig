{% extends "AppBundle:Layouts:layout.html.twig" %}

{% block javascripts %}
     {{ parent() }}
     <script type="text/javascript" src="{{ asset('assets/js/custom/buttons-following.js') }}"></script>
     <script type="text/javascript" src="{{ asset('assets/js/custom/users.js') }}"></script>

{% endblock %}

{% block content %}
     <div class="container-fluid">
          <div class="col-lg-8 box-form">
               <h1>Personas</h1>
               <div class="count">
                    <span class="label label-primary">
                         Total de personas: {{ pagination.getTotalItemCount }}
                    </span>
               </div>
               <br/>
               <div class="box-content box-users">
                    {% for user in pagination %}
                         <div class="col-lg-12 user-item">
                              <div class="avatar">
                                   {% if user.image == null %}
                                        <img src="{{ asset('assets/images/default.png') }}" />
                                   {% else %}
                                        <img src="{{ asset('uploads/users/' ~user.image) }}" />
                                   {% endif %}
                              </div>
                              <div class="user-item-content">
                                   <p>
                                        <a class="user_link"href="{{ path('user_profile', {'nickname': user.nick}) }}">
                                             {{user.name}} {{user.surname}}
                                        </a> 
                                        - {{user.nick}}</p>
                                   <p>{{user.bio}}</p>
                                   {% if app.user.id != user.id %}
                                        <div class="pull-right buttons-following">
                                             <button class="btn btn-success btn-follow
                                                  {% if app.user|following(user) == true %}
                                                       hidden
                                                  {% endif %}
                                                  " 
                                                  data-followed="{{user.id}}">
                                                  <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                                                  Seguir
                                             </button>
                                             <button class="btn btn-danger btn-unfollow
                                                  {% if app.user|following(user) == false %}
                                                       hidden
                                                  {% endif %}"
                                                  data-followed="{{user.id}}">
                                                  <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                                                  Dejar de seguir
                                             </button>
                                        </div>
                                        {% endif %}
                                        <div class="clearfix"></div>    
                                        <hr />                                
                                   </div>
                              </div>                    
                              {% endfor %}
                              <div class="navigation">
                                   {{ knp_pagination_render(pagination) }}
                              </div> 
               </div>
          </div>
     </div>
{% endblock %}